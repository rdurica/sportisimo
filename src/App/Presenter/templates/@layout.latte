<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


    <title>{ifset title}{include title|stripHtml} | {/ifset}Sportisimo</title>
</head>

<body>
<nav class="nav-extended">
    <div class="nav-wrapper blue darken-3">
        <a href="#" class="brand-logo">SRP</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a n:href="LogOut">Odhlásit ({$user->getIdentity()->getData()[username]})</a></li>
        </ul>
    </div>
    <div class="nav-content light-blue darken-1">
        <ul class="tabs tabs-transparent">
            <li class="tab"><a href=""><span class="material-icons md-18">arrow_back</span> Značky</a></li>
        </ul>
    </div>
</nav>
<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
<div class="container" style="margin-top: 10px">
    <div class="row">
        <div class="col s12">
            {include content}
        </div>
    </div>
</div>
{block scripts}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
    <script src="{$basePath}/assets/js/index.js"></script>
    <script>
        M.AutoInit();
    </script>
{/block}
</body>
</html>
