<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>{ifset title}{include title|stripHtml} | {/ifset}Sportisimo</title>
</head>
<body>
{include "_navbar.latte"}

<div class="container" style="margin-top: 10px">
        <div class="row">
            <div class="col s12">
                <div n:foreach="$flashes as $flash" class="card-panel {$flash->type}">{$flash->message}</div>
                {include content}
            </div>
        </div>
</div>
{block scripts}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
    <script src="https://unpkg.com/naja@2/dist/Naja.min.js"></script>
    <script src="{$basePath}/assets/js/index.js"></script>
    <script>
        M.AutoInit();
        naja.initialize();
    </script>

{/block}
</body>
</html>
